#!/usr/bin/env bash
# Script: 0-world_wide_web
# This script displays information about subdomains for a given domain.

display_info() {
    local domain=$1
    local subdomain=$2
    local destination=$3

    record_type=$(dig "$subdomain.$domain" +short | head -n1)
    echo "The subdomain $subdomain is a $record_type record and points to $destination"
}

domain="yaqscotech.tech"  # Replace with your actual domain

# Set the actual IP addresses for your servers
lb_01_ip="54.166.116.213"  # Replace with your load balancer IP
web_01_ip="35.153.33.61"  # Replace with your web server 01 IP
web_02_ip="54.165.26.200"  # Replace with your web server 02 IP

subdomains=("www" "lb-01" "web-01" "web-02")

for sub in "${subdomains[@]}"; do
    case "$sub" in
        "www") destination="$lb_01_ip" ;;
        "lb-01") destination="$lb_01_ip" ;;
        "web-01") destination="$web_01_ip" ;;
        "web-02") destination="$web_02_ip" ;;
        *) destination="" ;;
    esac

    if [ -n "$destination" ]; then
        display_info "$domain" "$sub" "$destination"
    else
        echo "No information available for $subdomain"
    fi
done

